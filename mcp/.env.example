# MCP Server Environment Variables
# Copy this file to .env and fill in your actual credentials

# GitHub MCP Server
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_default_repo

# PostgreSQL/Supabase
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Supabase (if using instead of raw Postgres)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Docker
DOCKER_HOST=unix:///var/run/docker.sock

# E2B (Code Execution)
E2B_API_KEY=your_e2b_api_key_here

# Brave Search
BRAVE_API_KEY=your_brave_search_api_key_here

# Slack (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_ID=your_slack_team_id

# Linear (optional)
LINEAR_API_KEY=your_linear_api_key

# Notion (optional)
NOTION_API_KEY=your_notion_api_key

# Stripe (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# Sentry (optional)
SENTRY_DSN=your_sentry_dsn

# AWS (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# Azure (optional)
AZURE_SUBSCRIPTION_ID=your_azure_subscription
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Project Configuration
PROJECT_ROOT=/Users/nathanial.smalley/projects/coral_collective
MCP_LOG_LEVEL=INFO
MCP_ENABLE_AUDIT=true
MCP_MAX_RETRIES=3
MCP_TIMEOUT_SECONDS=30

# Memory MCP Server (optional)
MEMORY_DB_PATH=./mcp/memory/knowledge.db

# Everything MCP Server (optional)  
EVERYTHING_INDEX_PATH=./mcp/indexes