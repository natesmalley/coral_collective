# CoralCollective Environment Configuration Template
# Copy this to .env and fill in your values

# ================================
# ENVIRONMENT SETTINGS
# ================================
CORAL_ENV=development
CORAL_DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=pretty

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=coral
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=coral_db
POSTGRES_URL=postgresql://coral:your_secure_password_here@localhost:5432/coral_db

# ================================
# MEMORY SYSTEM CONFIGURATION
# ================================
CORAL_MEMORY_ENABLED=true
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/chroma
MEMORY_CACHE_SIZE=1000

# ================================
# REDIS CACHE CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# AI MODEL API KEYS
# ================================
# Anthropic Claude API
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ================================
# MCP (MODEL CONTEXT PROTOCOL)
# ================================
MCP_ENABLED=true
MCP_TIMEOUT=30
MCP_MAX_RETRIES=3

# GitHub MCP Server
GITHUB_TOKEN=your_github_token_here

# E2B Code Execution
E2B_API_KEY=your_e2b_api_key_here

# Brave Search
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# ================================
# DOCKER CONFIGURATION
# ================================
# Docker daemon settings (if using Docker MCP server)
DOCKER_HOST=unix:///var/run/docker.sock

# ================================
# SECURITY SETTINGS
# ================================
# JWT secret for session management
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Metrics collection
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check endpoints
HEALTH_CHECK_ENABLED=true

# ================================
# FILE SYSTEM SETTINGS
# ================================
# Data directories
DATA_DIR=./data
LOGS_DIR=./logs
TEMP_DIR=./tmp

# File upload limits
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=.py,.md,.txt,.json,.yaml,.yml

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Hot reload for development
HOT_RELOAD=true

# Development server settings
DEV_SERVER_HOST=0.0.0.0
DEV_SERVER_PORT=8000

# ================================
# PRODUCTION SETTINGS
# ================================
# Worker processes (for production deployment)
WORKERS=4
WORKER_TIMEOUT=300
KEEPALIVE=2

# SSL/TLS settings
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ================================
# BACKUP CONFIGURATION
# ================================
# Backup settings for data persistence
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d
BACKUP_STORAGE=local

# S3 backup settings (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_backup_bucket
AWS_REGION=us-east-1

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable specific features
FEATURE_PARALLEL_EXECUTION=true
FEATURE_MEMORY_SYSTEM=true
FEATURE_MCP_INTEGRATION=true
FEATURE_WEB_INTERFACE=false
FEATURE_API_ENDPOINTS=true

# ================================
# CUSTOM AGENT SETTINGS
# ================================
# Agent-specific configurations
DEFAULT_AGENT_TIMEOUT=300
MAX_CONCURRENT_AGENTS=5
AGENT_RETRY_ATTEMPTS=3

# Custom model assignments
MODEL_ASSIGNMENTS_PATH=./config/model_assignments_2025.yaml

# ================================
# NOTES
# ================================
# 1. Never commit this file with real secrets to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate secrets regularly
# 4. Consider using a secrets management service for production
# 5. Ensure proper file permissions (600) for this file